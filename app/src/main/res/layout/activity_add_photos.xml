<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editRestOptions.addPhotos"
    android:background="@color/orange"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upload_logo"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_logo">

        <TextView
            android:id="@+id/TEXds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update Logo"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/update_logo"
        android:layout_width="295dp"
        android:layout_height="45dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TEX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Logo"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/added_label4"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        app:layout_constraintBottom_toTopOf="@+id/upload_logo"
        app:layout_constraintEnd_toEndOf="@+id/update_logo"
        app:layout_constraintStart_toStartOf="@+id/update_logo"
        app:layout_constraintTop_toBottomOf="@+id/update_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>